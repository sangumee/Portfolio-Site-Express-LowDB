doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible', content='ie=edge')
  title Project Detail
  link(rel='stylesheet', href='stylesheets/detail.css')
  script(src='javascripts/setting.js')
section#works.l-section(role='region')
  .l-section-holder
    h2.section-heading
      span.secondary Portfolio
      span.primary= name
    #portfolio.section-content.gallery.alternate
      article#work1.gallery-item(role='article')
        figure.gallery-figure(role='group')
          .gallery-image
            img.gallery-image-thumb(src=`/images/${imgurl}` onerror=`this.src='/images/app/${type}.png'`)
          figcaption.gallery-caption
            h3.gallery-title= name
            ul.gallery-spec
              li.gallery-spec-item
                strong.gallery-spec-key Programming Language
                span.gallery-spec-value= sumlang
              li.gallery-spec-item
                strong.gallery-spec-key Term
                span.gallery-spec-value= startDate +'~'+ endDate
            #work1Description
              p= explanation
            .ui-group
              a.ui-button(role='button', href=`${url}`, target='_blank') Demo
              a.ui-button(role='button', href=`${githuburl}`, target='_blank') Github Repo
        div(id="readme" class="Box Box--condensed instapaper_body md")
          !=markdown
