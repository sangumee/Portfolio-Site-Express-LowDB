extends layout

block content
  header
    nav
      h1
        a(href='/') Si Hyeong Lee's Portfolio
  main#maincontent
    section#map-container
      #map(aria-label='location', role='application')
    section
      .filter-options
        h2 Filter Results
        select#neighborhoods-select(name='neighborhoods', onchange='updateRestaurants()')
          option(value='all') All Neighborhoods
        select#cuisines-select(name='cuisines', onchange='updateRestaurants()')
          option(value='all') All Cuisines
        button(type='button' onclick="window.location.href='/create'") Create Information
    - var projects = dataarray
    ul#restaurants-list
      each projects in dataarray
        li
          img.restaurant-img(src=`/images/${projects.imgurl}`)
          a(href=`${projects.url}`)
            h1= projects.name
          p= 'URL : ' + projects.url
          p= projects.explanation
          a(href= '/' + projects.id class="viewDetail") View Details

