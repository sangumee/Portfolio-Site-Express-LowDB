html
  head
    link(rel='stylesheet', src='//normalize-css.googlecode.com/svn/trunk/normalize.css')
    link(rel='stylesheet', href='stylesheets/styles.css')
    link(rel='stylesheet', href='https://unpkg.com/leaflet@1.3.1/dist/leaflet.css', integrity='sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==', crossorigin='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Lee's Portfolio
  body(id="create-body")
    div(id="create-container")
        form(method='post', action='/create_process' enctype="multipart/form-data")
            label(for="projectName") Project Name :
            input(type="text" id="projectName" name="projectName" class="create_form")
            br
            label(for="projectUrl") Project URL :
            input(type="text" id="projectUrl" name="projectUrl" class="create_form")
            br
            label(for="projectExplanation") Project Explanation : 
            textarea(cols="30", rows="10" id="projectExplanation" name="projectExplanation" class="create_form")
            br
            label(for="projectImg") Project Image Upload : 
            input(type="file" id="projectImg" name="projectImg" class="create_form" accept="image/*")
            br
            label(for="sumLang") Summary Programming Language :
            input(type="text" id="sumLang" name="sumLang" class="create_form")
            br
            label(for="pjdate1") Project Date :
            input(type="date" id="pjdate1" name="pjdate1" class="create_form")
            p(id="create_p") ~
            input(type="date" id="pjdate2" name="pjdate2" class="create_form")
            br
            label(for="githuburl") Github URL :
            input(type="text" id="githuburl" name="githuburl" class="create_form")
            br
            input(type="submit")